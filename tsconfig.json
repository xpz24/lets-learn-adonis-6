{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@typings/*": ["types/*.ts"]
    }
  }
}
