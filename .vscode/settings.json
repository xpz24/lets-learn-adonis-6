{
  "files.exclude": {
    "node_modules": true,
    "package.json": true,
    "**/package-lock.json": true,
    "eslint.config.mjs": true,
    ".vscode": true,
    ".git": true,
    ".gitignore": true,
    ".htmlvalidate.json": true,
    "jsconfig.json": true,
    "prettier.config.mjs": true,
    "stylelint.config.mjs": true,
    "vite.config.ts": true,
    "tsconfig.json": true,
    "postcss.config.js": true,
    "tailwind.config.js": true,
    ".editorconfig": true,
    ".env": true,
    ".env.example": true,
    "ace.js": true,
    "adonisrc.ts": true
  },
  "cSpell.words": [
    "Adocasts",
    "battteries",
    "Bento",
    "bodyparser",
    "Cantarell",
    "cineasts",
    "csrf",
    "edgejs",
    "evenodd",
    "frontmatter",
    "headshot",
    "ianvs",
    "iconify",
    "Iconify",
    "Ignitor",
    "isnotdefined",
    "linecap",
    "linejoin",
    "mavrin",
    "mdast",
    "Neue",
    "Playwrighht",
    "preconnect",
    "redis",
    "Roboto",
    "Segoe",
    "stylesheet",
    "tseslint",
    "uids",
    "vfile",
    "vite",
    "watchlists"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "css.validate": false, // These should be workspace settings
  "less.validate": false,
  "scss.validate": false,
  "javascript.preferences.importModuleSpecifierEnding": "auto",
  "typescript.preferences.importModuleSpecifierEnding": "auto",
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "adonis6",
      "group": "pg17",
      "database": "adonis6",
      "username": "postgres"
    },
    {
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "library",
      "database": "library",
      "username": "postgres",
      "group": "pg17"
    }
  ]
  // "typescript.validate.enable": false, // Disable TypeScript's built-in checker
  // "javascript.validate.enable": false,
}
